<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PerpetuaNet.ViewModels"
        x:Class="PerpetuaNet.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="PerpetuaNet" Width="800" Height="600">
	<Grid>
		<!-- Barra de navegação -->
		<StackPanel Orientation="Horizontal" Margin="10">
			<Button Content="Home" Command="{Binding ShowHomeCommand}" Margin="5" />
			<Button Content="Torrents" Command="{Binding ShowTorrentsCommand}" Margin="5" />
			<Button Content="Sincronizar" Command="{Binding ShowSyncCommand}" Margin="5" />
			<Button Content="Configurações" Command="{Binding ShowSettingsCommand}" Margin="5" />
		</StackPanel>
		<!-- Área de conteúdo -->
		<ContentControl x:Name="MainContent" Margin="10,50,10,10" Content="{Binding CurrentView}" />
	</Grid>
</Window>