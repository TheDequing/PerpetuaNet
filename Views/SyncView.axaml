<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PerpetuaNet.Views.SyncView"
             xmlns:vm="using:PerpetuaNet.ViewModels"
             x:DataType="vm:SyncViewModel">
    <StackPanel Margin="10">
        <TextBlock Text="{Binding SyncStatus}" />
        <Button Content="Forçar Sincronização" Command="{Binding ForceSyncCommand}" Margin="0,5,0,0" />
    </StackPanel>
</UserControl>